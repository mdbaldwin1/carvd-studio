{
  "ignoreCommand": "if [ -f packages/website/scripts/vercel-ignore.sh ]; then bash packages/website/scripts/vercel-ignore.sh; else bash scripts/vercel-ignore.sh; fi",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

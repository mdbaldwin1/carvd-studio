{
  "name": "@carvd/desktop",
  "version": "0.1.8",
  "description": "An offline-only desktop app for designing and planning custom furniture and cabinetry.",
  "private": true,
  "type": "module",
  "main": "./out/main/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:mdbaldwin1/carvd-studio.git"
  },
  "license": "ISC",
  "author": "Michael Baldwin",
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && electron-vite dev",
    "dev:debug": "unset ELECTRON_RUN_AS_NODE && electron-vite dev --inspect",
    "build": "electron-vite build",
    "preview": "unset ELECTRON_RUN_AS_NODE && electron-vite preview",
    "package": "electron-builder",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "generate-keys": "node scripts/generate-license-keys.cjs",
    "generate-test-license": "node scripts/generate-test-license.cjs",
    "test:license": "node scripts/test-license-flow.cjs",
    "version:bump": "node scripts/version-bump.cjs",
    "generate:thumbnails": "node scripts/generate-template-thumbnails.cjs",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run && playwright test",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.5.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.7.3",
    "jspdf": "^4.1.0",
    "lucide-react": "^0.563.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.182.0",
    "uuid": "^10.0.0",
    "zundo": "^2.3.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/three": "^0.182.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "electron": "35.7.5",
    "electron-builder": "^26.7.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "happy-dom": "^20.4.0",
    "jsonwebtoken": "^9.0.3",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^6.4.0",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.carvd-studio.app",
    "productName": "Carvd Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/THIRD_PARTY_LICENSES.txt",
        "to": "THIRD_PARTY_LICENSES.txt"
      }
    ],
    "afterSign": "scripts/notarize.cjs",
    "publish": {
      "provider": "github",
      "owner": "mdbaldwin1",
      "repo": "carvd-studio",
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "mac": {
      "artifactName": "Carvd.Studio-${version}-${arch}-mac.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "artifactName": "Carvd.Studio-${version}-${arch}.${ext}",
      "title": "${productName} ${version}",
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "artifactName": "Carvd.Studio.Setup.${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Carvd Studio"
    },
    "fileAssociations": [
      {
        "ext": "carvd",
        "name": "Carvd Studio Project",
        "description": "Carvd Studio Project File",
        "role": "Editor"
      }
    ]
  }
}

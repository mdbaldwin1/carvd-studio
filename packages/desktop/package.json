{
  "name": "@carvd/desktop",
  "version": "0.1.17",
  "description": "An offline-only desktop app for designing and planning custom furniture and cabinetry.",
  "private": true,
  "type": "module",
  "main": "./out/main/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:mdbaldwin1/carvd-studio.git"
  },
  "license": "ISC",
  "author": "Michael Baldwin",
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && electron-vite dev",
    "dev:debug": "unset ELECTRON_RUN_AS_NODE && electron-vite dev --inspect",
    "build": "electron-vite build",
    "preview": "unset ELECTRON_RUN_AS_NODE && electron-vite preview",
    "prepare:runtime-deps": "npm install --omit=dev --workspaces=false",
    "package": "npm run build && npm run prepare:runtime-deps && electron-builder --mac zip --arm64",
    "package:mac": "npm run build && npm run prepare:runtime-deps && electron-builder --mac zip --arm64",
    "package:mac:dmg": "npm run build && npm run prepare:runtime-deps && electron-builder --mac dmg --arm64",
    "package:mac:x64": "npm run build && npm run prepare:runtime-deps && electron-builder --mac --x64",
    "package:mac:universal": "npm run build && npm run prepare:runtime-deps && electron-builder --mac --universal",
    "package:win": "npm run build && npm run prepare:runtime-deps && electron-builder --win",
    "generate-keys": "node scripts/generate-license-keys.cjs",
    "generate-test-license": "node scripts/generate-test-license.cjs",
    "test:license": "node scripts/test-license-flow.cjs",
    "version:bump": "node scripts/version-bump.cjs",
    "generate:thumbnails": "node scripts/generate-template-thumbnails.cjs",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run && vitest run --config vitest.main.config.ts && playwright test",
    "test:unit": "vitest run && vitest run --config vitest.main.config.ts",
    "test:main": "vitest run --config vitest.main.config.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "analyze": "ANALYZE=true electron-vite build"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.8.3",
    "jspdf": "^4.2.0",
    "lucide-react": "^0.575.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-virtuoso": "^4.18.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.1",
    "three": "^0.183.1",
    "uuid": "^13.0.0",
    "zundo": "^2.3.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.3.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/three": "^0.183.1",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "electron": "40.6.0",
    "electron-builder": "^26.8.1",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.4.0",
    "jsonwebtoken": "^9.0.3",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "rollup-plugin-visualizer": "^7.0.0",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "build": {
    "appId": "com.carvd-studio.app",
    "productName": "Carvd Studio",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/THIRD_PARTY_LICENSES.txt",
        "to": "THIRD_PARTY_LICENSES.txt"
      }
    ],
    "afterSign": "scripts/notarize.cjs",
    "publish": {
      "provider": "github",
      "owner": "mdbaldwin1",
      "repo": "carvd-studio",
      "releaseType": "release",
      "publishAutoUpdate": true
    },
    "mac": {
      "artifactName": "Carvd.Studio-${version}-${arch}-mac.${ext}",
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "artifactName": "Carvd.Studio-${version}-${arch}.${ext}",
      "title": "${productName} ${version}",
      "iconSize": 100,
      "backgroundColor": "#f5f5f7",
      "contents": [
        {
          "x": 130,
          "y": 220,
          "type": "file"
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "artifactName": "Carvd.Studio.Setup.${version}.${ext}",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Carvd Studio"
    },
    "fileAssociations": [
      {
        "ext": "carvd",
        "name": "Carvd Studio Project",
        "description": "Carvd Studio Project File",
        "role": "Editor"
      }
    ]
  }
}
